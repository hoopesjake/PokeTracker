@{
    ViewData["Title"] = "Tutoring Fee Calculator";
}

<head>
    <link rel="icon" type="image/png" href="~/images/pokeball-transparent-png-2.png"> <!-- Add favicon -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
        }

        /* Navigation Bar */
        .navbar {
            background-color: #333;
            overflow: hidden;
            display: flex;
            align-items: center;
            padding: 10px 20px;
        }

        .navbar h2 {
            color: white;
            margin: 0;
            flex-grow: 1;
        }

        .navbar img {
            width: 32px;
            height: 32px;
            margin-right: 10px;
        }

        .navbar a {
            text-decoration: none;
            color: white;
            padding: 10px 20px;
            background-color: #007bff;
            border-radius: 5px;
        }

        .navbar a:hover {
            background-color: #0056b3;
        }

        /* Page Container */
        .container {
            margin: 20px auto;
            width: 80%;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 2px 2px 10px gray;
            text-align: center;
        }

        /* Footer */
        footer {
            margin-top: 20px;
            padding: 10px;
            background: lightgray;
            border-radius: 5px;
        }
    </style>
</head>

<!-- Navigation Bar -->
<div class="navbar">
    <img src="~/images/pokeball-transparent-png-2.png" alt="Pokémon Icon">
    <h2>Tutoring Fee Calculator</h2>
    <a href="/">Back to Home</a>
</div>

<!-- Main Content -->
<div class="container">
    <h1>Pokémon Tutoring Fee Calculator</h1>

    <label for="hours">Enter hours of tutoring:</label>
    <input type="number" id="hours" min="1" required>

    <p>Rate per hour: <strong>$25</strong></p>
    
    <button id="calculate">Calculate Total</button>

    <p>Total Cost: <span id="total">$0</span></p>

    <footer>
        <p>&copy; 2025 Pokémon Cards App | Built by Jake Hoopes</p>
    </footer>
</div>

<script>
    $(document).ready(function() {
        $("#calculate").click(function() {
            var hours = $("#hours").val();
            if (hours <= 0 || isNaN(hours)) {
                alert("Please enter a valid positive number.");
            } else {
                var total = hours * 25; // Price per hour = $25
                $("#total").text("$" + total);
            }
        });
    });
</script>
